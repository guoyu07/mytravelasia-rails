<% stylesheet('formtastic') %>
<% stylesheet('formtastic_changes') %>

<div class="boxed">
  <%= semantic_form_for(@user, :url => update_password_path) do |f| %>

    <h4>Change password</h4>
    <%= f.inputs do %>
      <%= f.input :password, :label => "New Password", :hint => "At least 6 digits" %>

      <%= f.input :password_confirmation,
                  :label => "Password Confirmation",
                  :hint => "Should be the same as password",
                  :required => true %>
    <% end %>
    <%= f.actions do %>
      <%= f.submit "Update Password", :class => "button primary submit", :disable_with => 'Saving...' %>
    <% end %>

  <% end %>
</div>