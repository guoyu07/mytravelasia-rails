<% stylesheet('formtastic') %>
<% stylesheet('formtastic_changes') %>

<div class="boxed">

  <%= semantic_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
    <h4>Change your Password</h4>

    <%= f.inputs do %>

      <%= f.hidden_field :reset_password_token %>

      <%= f.input :password, :label => "New Password" %>

      <%= f.input :password_confirmation, :label => "Confirm new password", :required => true %>

    <% end %>

    <%= f.actions do %>
      <%= f.submit "Change my password", :class => "button primary" %>
    <% end %>

  <% end %>
</div>