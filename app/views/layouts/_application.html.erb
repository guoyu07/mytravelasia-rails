<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <link id="favicon" rel="shortcut icon" type="image/png" href="/favicon/favicon_32x32.ico" />
  <title><%= content_for?(:title) ? yield(:title) : "MyTravel-Asia" %></title>
  <meta name="keywords" content="<%= content_for?(:meta_keywords) ? yield(:meta_keywords) : APP_CONFIG[:meta_keywords] %>">
  <meta name="description" content="<%= content_for?(:meta_description) ? yield(:meta_description) : APP_CONFIG[:meta_description] %>">
  <%= yield(:meta) %>

  <%= stylesheet_link_tag 'reset'%>
  <%= stylesheet_link_tag 'ie'%>
  <%= stylesheet_link_tag 'ie7'%>
  <%= stylesheet_link_tag 'fancybox'%>
  <%= stylesheet_link_tag 'buttons'%>
  <%= stylesheet_link_tag 'jquery-ui-1.8.16.custom'%>
  <%= stylesheet_link_tag 'custom'%>

  <%= javascript_include_tag 'jquery-1.6.2.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.16.custom.min' %>

  <%# javascript_include_tag 'jquery.cycle.all.min' %>
  <%= javascript_include_tag 'jquery.easing.1.3' %>
  <%= javascript_include_tag 'organictabs.jquery' %>
  <%= javascript_include_tag 'jquery.fancybox-1.3.4.pack' %>
  <%= javascript_include_tag 'application.navigation' %>

  <%= javascript_include_tag 'jquery_ujs' %>

  <%= yield(:head) %>

  <%= csrf_meta_tag %>

  <%= render 'shared/analytics' %>
</head>
<body>

<%= render :partial => 'layouts/facebook' %>

<%= render :partial => 'layouts/header-top' %>

<%= render :partial => 'layouts/header-logo' %>

<div id="nav">

	<div class="container">
    <%= render_navigation :level => 1 %>
	</div>

</div>

<div id="content">

	<div class="container">

		<div id="main">
      <%= render :partial => "layouts/flash_errors" %>

      <%= yield %>
		</div>

		<div id="sidebar">

      <%= render :partial => 'layouts/facebook-like-button' %>

      <%= render :partial => 'layouts/admin-box' %>

      <%= yield(:sidebar) %>

      <%= image_tag "ad.gif", :alt => "ad", :class => "ad-bar" %>
      <%= render :partial => 'shared/ads_google' %>

		</div>

		<div class="clear"></div>

	</div>

</div>

<%= render :partial => 'layouts/footer' %>

</body>
</html>
